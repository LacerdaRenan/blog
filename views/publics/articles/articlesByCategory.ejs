<%- include('../../partials/header.ejs'); %>
<%- include('../../partials/publicNavBar.ejs'); %>

<body>

    
    <div class="container">
        <div class="jumbotron">
            <h1 class="display-4">Lacerdapress</h1>
            <p class="lead">Este é um simples blog Lacerdapress</p>
            <hr class="my-4">
            <p>Apresentação simples de artigos e categorias</p>
            <a class="btn btn-primary btn-lg" href="/admin/categories" role="button">Página do administrador</a>
        </div>

        <% articles.forEach(a=>{ %>
            <div class="card">
                <div class="card-header">
                    <h3><%= a.title %></h3>
                </div>
                <div class="card-body">
                    <a class="btn btn-success" href="/articles/<%= a.slug %>">Ler artigo</a>
                </div>
            </div>
            <br>
        <% }) %>
    </div>
</body>

<%- include('../../partials/footer.ejs'); %>