<%- include('../../partials/header.ejs'); %>
<%- include('../../partials/navBar.ejs'); %>
<body>
    <div class="container">
        <hr>
        <h2>Artigos</h2>
        <a href="/admin/articles/new" class="btn btn-success">Criar novo artigo</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Slug</th>
                    <th>Category</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% articles.forEach(a=>{ %>
                    <tr>
                        <td><%= a.id %></td>
                        <td><%= a.title %></td>
                        <td><%= a.slug %></td>
                        <td><%= a.category.title %></td>
                        <td>
                            <form class="deleteAny" style="display: inline;" method="POST" action="/admin/articles/delete">
                                <input type="hidden" name="id" value="<%= a.id %>" >
                                <button class="btn btn-danger">X</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
<script src="/js/preventDeleteForm.js"></script>
<%- include('../../partials/footer.ejs'); %>