<%- include('../../partials/header.ejs'); %>
<%- include('../../partials/navBar.ejs'); %>
<body>
    <div class="container">
        <hr>
        <h2>Categorias</h2>
        <a href="/admin/categories/new" class="btn btn-success">Criar nova categoria</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Slug</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(d=>{ %>
                    <tr>
                        <td><%= d.id %></td>
                        <td><%= d.title %></td>
                        <td><%= d.slug %></td>
                        <td>
                            <a href="/admin/categories/edit/<%= d.id %>" class="btn btn-warning">Editar</a>
                            
                            <form class="deleteAny" style="display: inline;" method="POST" action="/admin/categories/delete">
                                <input type="hidden" name="id" value="<%= d.id %>" >
                                <button class="btn btn-danger">X</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
<script src="/js/preventDeleteForm.js"></script>
<%- include('../../partials/footer.ejs'); %>